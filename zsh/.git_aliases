# alias gcbr=
# Git aliases

# Git add aliases
alias ga='git add'                                                        # Git stage files
alias gaa='git add --all'                                                 # Stage all files in the repository

# Git branch
alias gb='git branch'                                                     # Show local branches
alias gcb='git checkout -b'
alias gbd='git branch -d'
alias gbD='git branch -D'

# Git checkout 
alias gcf='git checkout'                                                # Remove changes

# Git commit
alias gcam='git commit -a -m'

# Git clone 
alias gc='git clone'
alias gbare='git clone --bare'

# Git diff
alias gd='git diff'

# Git merge
alias gm='git merge'
alias gma='git merge --abort'

# Git pull and push
alias gl='git pull'
alias gp='git push'
alias gpu='git push --set-upstream origin "$(git_current_branch)"'

# Git reset 
alias grh='git reset'
alias grhh='git reset --hard'

# Git status
alias gs='git status'
alias grm='git rm'
