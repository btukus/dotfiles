# Ls aliases
alias ls='ls --color=auto'
alias lv='ls -1 --color=auto'                                                          # Vertically list non-hidden files
alias la='ls -la --color=auto'                                                         # Vertically list all files (with access rights)
alias lsl='ls -l --color=auto'                                                         # Vertically list all non-hidden files (with access rights)

# Navigation aliases
alias hd='cd ~'                                                           # Home directory
alias win='cd /mnt/c/Users/BTUKUS/Desktop'                                # Windows directory

# Dotfiles
alias dot='cd ~/dotfiles'
alias bw='cd ~/dotfiles/brew'
alias tm='cd ~/dotfiles/tmux'

alias su='source ~/.zshrc'
alias shell='cd ~/dotfiles/zsh'

alias f='nvim'                                                            # Initialise nvim
alias fs='nvim --startuptime /tmp/nvim-startuptime'                       # Measures Startup nvim
alias nc='cd ~/dotfiles/nvim/.config/nvim/'                               # Neovim main directory
alias ncc='cd ~/dotfiles/nvim/.config/nvim/lua/core'                      # Neovim core directory
alias ncp='cd ~/dotfiles/nvim/.config/nvim/lua/plugins'                   # Neovim plugin directory
