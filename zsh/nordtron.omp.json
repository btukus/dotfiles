{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#88c0d0",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 5
          },
          "template": "<#5e81ac> \uf07c  </>{{ .Path }}<#5e81ac></>",
          "style": "diamond",
          "type": "path",
          "mixed_threshold": "4"
        },
        {
          "foreground": "#88c0d0",
          "properties": {
            "branch_icon": "\uf126 ",
            "fetch_upstream_icon": true
          },
          "style": "powerline",
          "template": " | {{ .UpstreamIcon }}{{ .HEAD }} ",
          "type": "git"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "newline": false,
      "segments": [
        {
          "foreground": "#b48ead",
          "style": "diamond",
          "template": "{{ if .Namespace }} {{ .Namespace }} ::{{ end }} {{ .Context }} ",
          "type": "kubectl"
        },
        {
          "type": "az",
          "style": "powerline",
          "foreground": "#b48ead",
          "template": "| {{ .Name }} - {{.TenantDisplayName}} î¯˜ |",
          "properties": {
            "source": "cli"
          },
          "when": "shell.has_command('az')"
        },
        {
          "foreground": "#b48ead",
          "style": "diamond",
          "template": " {{ .CurrentDate | date .Format }}<#007ACC> \ue641 </>",
          "properties": {
            "time_format": "15:04:05"
          },
          "type": "time"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#5e81ac",
          "style": "plain",
          "template": " \ue602 ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "version": 2
}
